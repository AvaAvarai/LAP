; Factorial demo
; Shows recursion and arithmetic

(define (factorial n)
  (if (= n 0)
      1
      (* n (factorial (- n 1)))))

(print "Factorial calculations:")
(print "0! = " (factorial 0))
(print "1! = " (factorial 1))
(print "2! = " (factorial 2))
(print "3! = " (factorial 3))
(print "4! = " (factorial 4))
(print "5! = " (factorial 5))
(print "6! = " (factorial 6)) 